    <nav class="navbar navbar-expand-lg navbar-dark badge-danger fixed-top" style="background-color: #D46A6B;" role="navigation">
        <div class="container">
            <a class="navbar-brand h1 mb-0" href="#">DOE LUZ</a>
            <div>
                @Html.ActionLink("Sair", "Login", "SessionControler", null, new { @class = "navbar-brand" })
            </div>
        </div>
    </nav>
    <div class="row m-1 p-1">
        <div id="categories" class="col-2">
            <img src="/lib/bootstrap/js/src/logo.jpg" alt="" width="150" height="100">
        </div>

        <div class="mt-5 col-lg-9">
            <h1 style="text-align:center">Bem vindo @HttpContextAccessor.HttpContext.Session.GetString("usuario_session")!</h1>
            @Html.ActionLink("Doar para ONG", "New", "Doacao", null, new { @class = "btn btn-danger btn-lg btn-block rounded-pill" })
            @Html.ActionLink("Procurar alguem para doar", "ListparaDoador", "Beneficiario", null, new { @class = "btn btn-danger btn-lg btn-block rounded-pill" })
            @Html.ActionLink("Editar Cadastro", "Edit", "Doador", new { id = @HttpContextAccessor.HttpContext.Session.GetInt32("id_session") }, new { @class = "btn btn-danger btn-lg btn-block rounded-pill" })
