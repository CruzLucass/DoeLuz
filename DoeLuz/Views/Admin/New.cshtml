@model DoeLuz.Models.Admin

@{
    ViewData["Title"] = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 style="text-align:center">Cadastrar</h1>

<h4>Administrador</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="New">            
            <div class="form-row">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group col-md-6">
                    <label asp-for="Nome" class="control-label"></label>
                    <input asp-for="Nome" class="form-control" id="nome" placeholder="Nome Completo" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>

                <div class="form-group col-md-4">
                    <label asp-for="Senha" class="control-label"></label>
                    <input asp-for="Senha" class="form-control" placeholder="Senha" />
                    <span asp-validation-for="Senha" class="text-danger"></span>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="Cpf" class="control-label"></label>
                    <input asp-for="Cpf" class="form-control" placeholder="CPF" />
                    <span asp-validation-for="Cpf" class="text-danger"></span>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control" placeholder=" Email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="ConfirmaEmail" class="control-label"></label>
                    <input asp-for="ConfirmaEmail" class="form-control" placeholder="Corfirma email" />
                    <span asp-validation-for="ConfirmaEmail" class="text-danger"></span>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-10">
                    <label asp-for="Endereco" class="control-label"></label>
                    <input asp-for="Endereco" class="form-control" placeholder="Endereço, número" />
                    <span asp-validation-for="Endereco" class="text-danger"></span>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-4">
                    <label asp-for="NomeOng" class="control-label"></label>
                    <input asp-for="NomeOng" class="form-control" placeholder="Nome da Organização" />
                    <span asp-validation-for="NomeOng" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <a style="color:#D46A6B" asp-controller="SessionControler" asp-action="Main" class="ml-4">Voltar</a>
                <input asp-action="ConfirmaCadastro" asp-controller="Admin" type="submit" value="Confirmar Cadastro" class="btn btn-primary btn-danger" />
            </div>
            <div>
                
            </div>
        </form>       
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
