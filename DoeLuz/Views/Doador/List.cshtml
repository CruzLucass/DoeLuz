@model DoadorListViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, DoeLuz

@foreach (var d in Model.Doadores)
{
    <div class="card card-group-danger m-1 p-1">
        <div class="btn-group-toggle p-1">
            <div>
                <a style="color:#D46A6B;" asp-action="Details" asp-route-id="@d.DoadorID"><h4>@d.Nome</h4></a>
                <h5>@d.Email</h5>
                <h5>@d.Endereco</h5>
                <h5>@d.Doacoes</h5>
            </div>
        </div>
    </div>
    
}
<div page-model="@Model.PagingInfo" paging-action="List" page-classes-enabled="true"
     page-class="btn" page-class-normal="btn-secondary"
     page-class-selected="btn-primary" class="btn-group pull-right m-1">
</div>
<div><a style="color:#D46A6B;" asp-controller="SessionControler" asp-action="Home">Voltar ao menu</a></div>
