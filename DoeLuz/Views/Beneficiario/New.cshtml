@model DoeLuz.Models.Beneficiario

@{
    ViewData["Title"] = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h4 style="text-align:center">Cadastrar Novo Beneficiario</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="New">
            <div class="form-row">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group col-md-10">
                    <label asp-for="Nome" class="control-label"></label>
                    <input asp-for="Nome" class="form-control" id="nome" placeholder="Nome Completo" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-5">
                    <label asp-for="Senha" class="control-label"></label>
                    <input asp-for="Senha" class="form-control" placeholder="Senha" />
                    <span asp-validation-for="Senha" class="text-danger"></span>
                </div>
                <div class="form-group col-md-5">
                    <label asp-for="ConfirmaSenha" class="control-label"></label>
                    <input asp-for="ConfirmaSenha" class="form-control" placeholder="Confirma Senha" />
                    <span asp-validation-for="ConfirmaSenha" class="text-danger"></span>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-5">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control" placeholder=" Email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group col-md-5">
                    <label asp-for="ConfirmaEmail" class="control-label"></label>
                    <input asp-for="ConfirmaEmail" class="form-control" placeholder="Corfirma email" />
                    <span asp-validation-for="ConfirmaEmail" class="text-danger"></span>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-10">
                    <label asp-for="Endereco" class="control-label"></label>
                    <input asp-for="Endereco" class="form-control" placeholder="Endereço completo" />
                    <span asp-validation-for="Endereco" class="text-danger"></span>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-5">
                    <label asp-for="DataNascimento" class="control-label"></label>
                    <input asp-for="DataNascimento" class="form-control" placeholder="dd/MM/yyyy" />
                    <span asp-validation-for="DataNascimento" class="text-danger"></span>
                </div>
                <div class="form-group col-md-5">
                    <label asp-for="Telefone" class="control-label"></label>
                    <input asp-for="Telefone" class="form-control" placeholder="Telefone" />
                    <span asp-validation-for="Telefone" class="text-danger"></span>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-10">
                    <label asp-for="Preferencia" class="control-label"></label>
                    <input asp-for="Preferencia" class="form-control" placeholder="Conte-nos suas preferências" />
                    <span asp-validation-for="Preferencia" class="text-danger"></span>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-10">
                    <label asp-for="Historia" class="control-label"></label>
                    <input asp-for="Historia" class="form-control" placeholder="Conte sua história aqui" />
                    <span asp-validation-for="Historia" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <a style="color:#D46A6B" asp-controller="SessionControler" asp-action="Main" class="mr-3">Voltar</a>
                <input type="submit" value="Confirmar" class="btn btn-primary btn-danger ml-4" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

