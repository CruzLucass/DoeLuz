</div>
<div>
    <a style="color:#D46A6B;" asp-action="Edit" asp-route-id="@Model.DoacaoID">Editar</a> |
    <a style="color:#D46A6B;" asp-action="Delete" asp-route-id="@Model.DoacaoID">Excluir</a> |
    @Html.ActionLink("Voltar para a lista", "List", "Doacao", new { id = @HttpContextAccessor.HttpContext.Session.GetInt32("id_session") }, new { @class = "btn btn-outline-secondary" })
</div>
