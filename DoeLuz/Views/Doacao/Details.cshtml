    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 style="text-align:center">Informações</h1>

<div>
    <h4>Doação</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DataEntrega)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataEntrega)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Confirma)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Confirma)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TipoDoacao)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TipoDoacao)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Item)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Item)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Mensagem)
        </dt>
        <dd class="col-sm-10">
