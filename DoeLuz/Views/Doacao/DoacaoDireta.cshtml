@model DoeLuz.Models.Doacao
@using Microsoft.AspNetCore.Http;
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width , initial-scale=1, shrink-to-fit=no" />
    <link rel="stylesheet" asp-href-include="/lib/bootstrap/dist/**/*.min.css" />
    <title>DoacaoDireta</title>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark badge-danger" style="background-color: #D46A6B;" role="navigation">
        <div class="container">
            <a class="navbar-brand h1 mb-0" href="#">DOE LUZ</a>
            <div>
                @Html.ActionLink("Sair", "Login", "SessionControler", null, new { @class = "navbar-brand" })
            </div>
        </div>
    </nav>
    <h4>Doação Direta</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="DoacaoDireta">
                <div class="form-group">
                    <input type="hidden" asp-for="BeneficiarioID" />
                </div>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="DataEntrega" class="control-label"></label>
                    <input asp-for="DataEntrega" class="form-control" />
                    <span asp-validation-for="DataEntrega" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Confirma" class="control-label"></label>
                    <input asp-for="Confirma" class="form-control" />
                    <span asp-validation-for="Confirma" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="TipoDoacao" class="control-label"></label>
                    <input asp-for="TipoDoacao" class="form-control" />
                    <span asp-validation-for="TipoDoacao" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Item" class="control-label"></label>
                    <input asp-for="Item" class="form-control" />
                    <span asp-validation-for="Item" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Mensagem" class="control-label"></label>
                    <input asp-for="Mensagem" class="form-control" />
                    <span asp-validation-for="Mensagem" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DoadorID" class="control-label"></label>
                    <select asp-for="DoadorID" class="form-control" asp-items="ViewBag.DoadorID"></select>
                </div>

                <div class="form-group">
                    <label asp-for="AdminID" class="control-label"></label>
                    <select asp-for="AdminID" class="form-control" asp-items="ViewBag.DoadorID"></select>
                </div>
                <div class="form-group">
                    <input type="submit" value="Corfirmar" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
    <div class="col-5">
        @Html.ActionLink("Voltar", "ListparaDoador", "Beneficiario", new { id = @HttpContextAccessor.HttpContext.Session.GetInt32("id_session") }, new { @class = "btn btn-outline-secondary" })
    </div>
</body>
</html>
